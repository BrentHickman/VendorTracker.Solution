@{
  Layout = "_Layout";
}
@using VendorTracker.Models;
<div>
  <h1>Vendors</h1>

  @if (@Model.Count == 0)
  {
    <p>No vendors have been added yet!</p>
  } 

  @foreach (Vendor vendor in Model)
  {
    <a href='/vendors/@vendor.Id'>@vendor.Name</a>
    <br>
    <br>
  }
  <p><a href='/vendors/new'>Add a new Vendor</a><a href='/'>Back home</a></p>
</div>